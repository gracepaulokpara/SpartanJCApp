<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_phone" />

    <TextView
        android:id="@+id/textView_data_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageView_icon"
        android:text="Personal"
        android:textColor="#565656"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_data_type"
        android:layout_below="@+id/textView_data_type"
        android:layout_marginTop="8dp"
        android:text="1(408)-555-5555"
        android:textColor="#111111"
        android:textSize="20sp" />
</RelativeLayout>