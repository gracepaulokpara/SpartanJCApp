<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <EditText
        android:nextFocusForward="@+id/editText_value"
        android:inputType="text"
        android:singleLine="true"
        android:id="@+id/editText_type"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_edittext"
        android:hint="Type"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <EditText
        android:inputType="text"
        android:singleLine="true"
        android:id="@+id/editText_value"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/imageButton_cancel"
        android:layout_toRightOf="@+id/editText_type"
        android:background="@drawable/background_edittext"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <ImageButton
        android:id="@+id/imageButton_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_cancel"
        android:padding="8dp" />
</RelativeLayout>